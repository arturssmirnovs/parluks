{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "declaration": true,
    "outDir": "./dist",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node"
  },
  // "files": ["./src/main.ts", "./src/js/"],
  "include": ["src/**/*"],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}
